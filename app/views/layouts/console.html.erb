<!DOCTYPE html>
<html>
<head>
  <title><%= @title||'网站管理' %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div class="wrapper">
    <ul id="navigation">
      <li><%= link_to "管理首页", admin_console_path %></li>
      <li><%= link_to "等待验证的", admin_archives_path(:status => Archive::SYNCED) %></li>
      <li><%= link_to "已经被锁定的", admin_archives_path(:status => Archive::LOCKED) %></li>
      <li><%= link_to "验证通过的", admin_archives_path(:status => Archive::OK) %></li>
      <li><%= link_to "首页", root_path %></li>
    </ul>
    <h1 class="admin-title">网站管理<%= @title.blank? ? '' : "-#{@title}" %></h1>
    <div id="main">
    <div class="section">
    <%= yield %>
    </div>
    </div>
    <div id="side">
      <ul>
        <%= yield :admin_menu %>
        <li><%= link_to '管理首页',admin_console_path %></li>
        <li><%= link_to '管理信息源',admin_providers_path %></li>
        <li><%= link_to '管理文章',admin_archives_path %></li>
        <li><%= link_to '管理分类', admin_categories_path %></li>
        <li><%= link_to '网站首页',root_path %></li>
      </ul>
    </div>
    <p class="clear"></p>
  </div>
</body>
</html>

